<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/quizgame"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:background="@drawable/quiz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.086" />


    <TextView
        android:id="@+id/nameview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:textSize="30dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/leaderBoard"
        app:layout_constraintTop_toBottomOf="@+id/quizgame"
        tools:layout_editor_absoluteX="-16dp" />

    <ImageButton
        android:id="@+id/leaderBoard"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="216dp"
        android:background="@drawable/leaderboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quizgame" />

    <ImageButton
        android:id="@+id/setting"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:background="@drawable/setting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leaderBoard" />

</androidx.constraintlayout.widget.ConstraintLayout>